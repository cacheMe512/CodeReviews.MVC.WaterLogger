@page
@model WaterLogger.cacheMe512.Pages.DrinkingWater.IndexModel
@using WaterLogger.cacheMe512.Helpers

@{
    ViewData["Title"] = "Index";
}

<h1>Drink Log</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrinkingWaterModel[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkingWaterModel[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkingWaterModel[0].Measure)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DrinkingWaterModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @MeasureOptions.GetDisplayLabel(item.Measure)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
