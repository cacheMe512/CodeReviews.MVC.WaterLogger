@page
@model WaterLogger.cacheMe512.Pages.DrinkingWater.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrinkingWaterModel.Date" class="control-label"></label>
                <input asp-for="DrinkingWaterModel.Date" class="form-control" />
                <span asp-validation-for="DrinkingWaterModel.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkingWaterModel.Quantity" class="control-label"></label>
                <input asp-for="DrinkingWaterModel.Quantity" class="form-control" />
                <span asp-validation-for="DrinkingWaterModel.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkingWaterModel.Measure" class="control-label"></label>
                <select asp-for="DrinkingWaterModel.Measure" class="form-control"
                        asp-items="Model.MeasureOptions">
                    <option value="">-- Select Measure --</option>
                </select>
                <span asp-validation-for="DrinkingWaterModel.Measure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
